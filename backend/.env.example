# İletişim Group Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Company Information
COMPANY_NAME=İletişim Group
COMPANY_WEBSITE=https://www.iletisimgroup.com

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# MongoDB Atlas Configuration
# Atlas'ta cluster oluşturduktan sonra buraya connection string'i ekleyin:
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/iletisim-group?retryWrites=true&w=majority

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Analytics Configuration
ANALYTICS_RETENTION_MONTHS=6
ANALYTICS_CLEANUP_ENABLED=true

# Rate Limiting
CONTACT_RATE_LIMIT=5
ANALYTICS_RATE_LIMIT=100

# GDPR Compliance
DATA_RETENTION_PERIOD=24
COOKIE_CONSENT_REQUIRED=true
PRIVACY_POLICY_URL=https://www.iletisimgroup.com/privacy-policy
